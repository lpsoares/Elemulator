<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.edu.insper.elemulator.controller.MainActivity">

    <RelativeLayout
        android:id="@+id/Canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Others">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Others"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regd"
            android:layout_alignEnd="@+id/regd"
            android:layout_marginTop="37dp"
            android:id="@+id/valuem" />

        <Button
            android:text="Run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/run"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Run All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runall"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/run" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regd"
            android:layout_alignBottom="@+id/runall"
            android:layout_alignStart="@+id/rega"
            android:layout_alignParentTop="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rega"
            android:layout_below="@+id/runall"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
